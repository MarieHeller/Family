<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for [@booking,@booking_review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
        <%= f.submit "Leave some love", class: "btn-flat" %>
      <% end %>
    </div>
  </div>
</div>
