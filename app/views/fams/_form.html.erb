<%= simple_form_for(@fam) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :name,
        required: true,
        autofocus: true%>
        <%= f.input  :description,
        required: true,
        autofocus: true%>
        <%= f.input :cultural_experience,
        required: true,
        autofocus: true%>
        <%= f.input  :members,
        required: true,
        autofocus: true%>
        <%= f.input :language, collection: User::LANGUAGES,
        required: true,
        autofocus: true%>
        <%= f.input  :location,
        required: true,
        autofocus: true%>
        <%= f.input :housing_type, collection: Fam::HOUSING,
        required: true,
        autofocus: true%>
        <%= f.input  :capacity, collection: Fam::CAPACITY,
        required: true,
        autofocus: true%>
        <%= f.input :price,
        required: true,
        autofocus: true%>
        <%= f.input :pictures, as: :file, input_html: { multiple: true }, required: true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit , "Submit!", class: "btn-flat" %>
      </div>
      <% end %>
