<div class="polaroid-true">
<div class="d-flex">
  <div class="col-8">

    <div class="container text-center pt-5">
      <h1>Find the perfect Family for you!</h1>
      <p>We found <%= @fams.length %> families to rent</p>
    </div>

      <% @fams.each do |fam|  %>
        <%= link_to fam_path(fam) do %>
        <div class="item">
          <div class="polaroid">
            <% if fam.pictures.any? %>
              <%= cl_image_tag fam.pictures.first.photo %>
            <% else %>
              <%= image_tag "default_family.jpg" %>
            <% end %>

            <div class="caption pt-2">
              <h5><%= fam.name %></h5>
              <!-- <i class="fas fa-globe-americas"> -->
              <p></i> <%= fam.cultural_experience %></p>
              <p class="text-right m-0"><%= fam.price %> â‚¬/night</p>
            </div>
          </div>

        <div>
        <% if fam.user == current_user %>
        <%= link_to fam_path(fam), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
        <% end %>
        <% if fam.user == current_user %>
        <%= link_to edit_fam_path(fam) do %>
        <i class="far fa-edit"></i>
        <% end %>
        <% end %>
        </div>
        <% end %>

      </div>
      <% end %>
    </div>


    <div class="col-4">
      <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
  </div>
</div>
</div>
