<div class="card" style="width: 30rem;">
<%= cl_image_tag @profile.photo, class: "card-img-top" %>
  <div class="card-body">
    <h5 class="card-title"><%= @profile.first_name %> <%= @profile.last_name %></h5>
    <p class="card-text"><%= @profile.description %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Age: <%= @profile.age %></li>
    <li class="list-group-item">From: <%= @profile.nationality %></li>
    <li class="list-group-item">Speaks: <%= @profile.language %></li>
  </ul>
  <div class="card-body">
    <% if policy(@profile).update? %>
      <%= link_to "Create Family", new_fam_path, class: "card-link btn btn-primary"%>
    <% end %>
  </div>
</div>

<h2>My Fams</h2>

<% @profile.fams.each do |fam| %>
  <div class="card" style="width: 30rem;">
  <% fam.pictures.each do |picture| %>
    <%= cl_image_tag picture.photo, class: "card-img-top" %>
  <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= fam.name %></h5>
      <p class="card-text"><%= fam.description %></p>
    </div>

    <div class="card-body">
      <% if policy(@profile).update? %>
        <%= link_to "Show", fam_path(fam), class: "card-link btn btn-primary"%>
        <%= link_to "Delete", fam_path(fam), method: :delete, class: "card-link btn btn-primary"%>
      <% end %>
    </div>
  </div>
<% end %>

