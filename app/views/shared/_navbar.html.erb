<div class="navbar navbar-expand-sm navbar-light d-flex navbar-lewagon fixed-top">
  <%= link_to "/fams", class: "navbar-brand" do %>
  <%= image_tag "https://static.thenounproject.com/png/643659-200.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <% if user_signed_in? %>

    <div class="search">
     <%= form_for :search, url: fams_path, method: :get do |f| %>
