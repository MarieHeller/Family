     <%= f.submit "Find Family", class: "btn-search" %>
     <% end %>
   </div>
   <div class="d-flex space-around">
    <div class="nav-link">
      <%= link_to "Become a family", new_fam_path %>
    </div>
    <div class="nav-link">
      <%# link_to "Dashboard", bookings_path %>
    </div>
    <div class="nav-link">
      <%= link_to "Profile", profile_path(current_user) %>
    </div>
    <div class="nav-link">
      <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
    </div>
  </div>
  <% else %>
  <div class="d-flex space-around">
    <div class="nav-link">
      <%= link_to "Become a family", new_fam_path %>
    </div>
    <div class="nav-link">
      <%= link_to "Sign Up", new_user_registration_path %>
    </div>
    <div class="nav-link">
      <%= link_to "Log In", new_user_session_path%>
